@model UserRegisterPageVM


<form asp-action="Register" asp-controller="Home" method="post" class="p-3 w-75 m-auto">

    <div class="mb-3">
        <label>Kullanıcı ismi giriniz</label>
        <input asp-for="RegisterModel.UserName" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Sifre giriniz</label>
        <input asp-for="RegisterModel.Password" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Email giriniz</label>
        <input asp-for="RegisterModel.Email" class="form-control" />
    </div>

    <div class="mb-3">
        <button class="btn btn-primary">Kayıt ol</button>
    </div>
    <p>@TempData["message"]</p>
</form>